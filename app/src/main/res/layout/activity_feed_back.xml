<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tiankuo.order.FeedBackActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="添加文字评论"
        android:id="@+id/textViewComment"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft= "true"
        android:layout_marginBottom="10dp"
        android:textSize="30dp" />
		
	<EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editTextComment"
        android:textSize="20dp"
        android:inputType="textMultiLine"
		android:minLines="1"
        android:layout_below="@+id/textViewComment"
        android:layout_above="@+id/textViewPhotoDisplay"

		android:layout_marginBottom="30dp"		/>
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="上传图片"
        android:id="@+id/textViewPhotoDisplay"
		android:layout_below="@+id/editTextComment"
        android:layout_above="@+id/buttonUploadPhoto"

        android:layout_marginBottom="10dp"
        android:textSize="30dp" />
		
	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传"
        android:id="@+id/buttonUploadPhoto"
		android:layout_below="@+id/textViewPhotoDisplay"
        android:layout_above="@+id/textViewScore"

		android:layout_marginBottom="30dp"
        android:layout_marginRight="60dp" />
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="给酒店打分"
        android:id="@+id/textViewScore"
		android:layout_below="@+id/buttonUploadPhoto"
        android:layout_above="@+id/editTextScore"

        android:layout_marginBottom="10dp"
        android:textSize="30dp" />
		
	<EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editTextScore"
        android:textSize="20dp"
        android:inputType="textMultiLine"
		android:minLines="1"
        android:layout_below="@+id/textViewScore"
        android:layout_above="@+id/textViewComplain"

		android:layout_marginBottom="30dp"		/>
	
	<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="我要投诉"
        android:id="@+id/textViewComplain"
		android:layout_below="@+id/buttonUploadPhoto"
        android:layout_above="@+id/editTextComplain"


        android:layout_marginBottom="10dp"
        android:textSize="30dp" />
		
	<EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editTextComplain"
        android:textSize="20dp"
        android:inputType="textMultiLine"
		android:minLines="1"
        android:layout_below="@+id/textViewComplain"
        android:layout_above="@+id/buttonSubmit"

		android:layout_marginBottom="30dp"		/>
  
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:id="@+id/buttonSubmit"
		android:layout_below="@+id/editTextComplain" 
		android:layout_toLeftOf="@+id/buttonCancel" 
        android:layout_alignParentBottom="true"
        />
   
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:id="@+id/buttonCancel"
		android:layout_below="@+id/editTextComplain"
		android:layout_toRightOf="@+id/buttonSubmit"  
        android:layout_alignParentBottom="true"
		/>
		
		
</RelativeLayout>
