<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView android:id="@+id/QRCode_list"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"/>

    <LinearLayout android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/orderid_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="22dp" />
		<TextView android:id="@+id/hotelname_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="22dp" />
		<TextView android:id="@+id/hoteladdress_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="22dp" />
		<TextView android:id="@+id/roomname_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textSize="22dp" />
        <TextView android:id="@+id/roomnumber_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp" />

    </LinearLayout>


</LinearLayout>